/*
// Fuerza Z (horizontal x en Wang) 
// Fuerza X (vertical y en Wang) 
*/

monitorForceOUTLETWALL
{
    type            forces;

    libs            ("libforces.so");

    executeControl  timeStep;
    executeInterval   2;

    writeControl    timeStep;
    writeInterval    2;

    patches         (OUTLETWALL);
    rho             rhoInf;
    rhoInf          1.185430464; 
    
    log             no;
     
    CofR            (0 0 0);
    pitchAxis       (0 0 1);
    
}

monitorForceBENDWALL
{
    type            forces;

    libs            ("libforces.so");

      executeControl  timeStep;
      executeInterval   2;

      writeControl    timeStep;
      writeInterval    2;

    log             no;
    
    #include "userForcePatches"
    rho             rhoInf;
    rhoInf          1.185430464;

     
    CofR            (0 0 0);
    pitchAxis       (0 0 1);
    
}

